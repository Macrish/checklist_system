<% if user_signed_in? %>
  <button class="btn-large grey lighten-3"><%= link_to "Add checklist", new_form_path %></button>
  <table class="highlight">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Published</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @forms.each do |form| %>
        <tr>
          <td><%= form.title %></td>
          <td><%= form.description %></td>
          <td><%= form.status %></td>
          <td><%= form.published_at %></td>
          <td>
            <%= link_to edit_form_path(form) do %>
              <i class="material-icons">create</i> 
            <% end %>
          </td>
          <td>
              <%= link_to form_path(form, form: {status: 'Published'}), method: :put do %>
                <i class="material-icons">remove_red_eye</i> Published
              <% end %>
          </td>
          <td>
            <%= link_to form, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="material-icons">delete</i> Remove
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
 <h3 class="center"><button class= "waves-effect cyan lighten-5 btn"><%= link_to "Log in", user_session_path %></button> to start create checklist<br>
  <button class= "waves-effect orange lighten-4 btn"><%= link_to "Sign up", new_user_registration_path %></button> if you don't have an account</h3>
<% end %>